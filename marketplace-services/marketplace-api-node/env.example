# =====================================================
# Environment Configuration - COPY TO .env
# =====================================================

# Application
NODE_ENV=development
PORT=8085

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=superapp_marketplace_node
DB_USER=marketplace_user
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Security
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_STRONG_SECRET
JWT_EXPIRATION=24h

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Redis (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Services (for ACL adapters)
# BaaS Providers
GALILEO_API_KEY=
GALILEO_API_SECRET=
MARQETA_API_KEY=
MARQETA_API_SECRET=

# KYC Providers
JUMIO_API_KEY=
JUMIO_API_SECRET=
ONFIDO_API_KEY=

# Monitoring
PROMETHEUS_PORT=9090
ELASTICSEARCH_URL=http://localhost:9200

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_DEBUG_MODE=false

# Production Settings (uncomment for production)
# NODE_ENV=production
# ENABLE_SWAGGER=false
# ENABLE_DEBUG_MODE=false
# LOG_LEVEL=warn



